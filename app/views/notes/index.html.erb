
<h1 class="page-title">My Sticky Notes</h1>

<div class="sticky-note-container">

    <% @color_array = ['#ff7eb9', '#ff65a3','#7afcff','#feff9c','#fff740']%>

    
    <% @notes.each do |note| %>
        <%= link_to note_path(note), class: "sticky-note-link", :show => 'go' do %>
            <div class="sticky-note" style="background-color: <%= @color_array.sample %>">
                <p class="sticky-note-body">
                    <%= note.body %>
                </p>
                <%= link_to note_path(note.id), class: "delete-button", method: :delete do %>
                <i class="fas fa-trash-alt icon"></i>
                <% end %>
            </div>
        <% end %>
       
    <% end %>

</div>


